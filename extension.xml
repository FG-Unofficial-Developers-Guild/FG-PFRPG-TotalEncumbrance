<?xml version="1.0" encoding="iso-8859-1"?>
<root release="3.0" version="3.3">

	<properties>
		<name>Total Encumbrance</name>
		<version>1.2.8</version>
		<author>bmos</author>
		<description>An extension that computes and displays the weight of carried coins.</description>
		<ruleset>
			<name>PFRPG</name>
		</ruleset>
	</properties>

	<announcement text="PFRPG Total Encumbrance Extension: This extension applies any applicable encumbrance penalties including coin weight in your total." font="emotefont" />

	<base>
		<includefile source="campaign/record_char_inventory.xml" />
		<includefile source="campaign/record_char_main.xml" />
		<includefile source="campaign/record_spell_entry.xml" />
		<includefile source="strings/strings_total_encumbrance.xml" />
		<includefile source="strings/strings_options.xml" />
		<script name="CoinsWeight" file="scripts/coins_weight.lua" />
		<script name="RealEncumbrance" file="scripts/real_encumbrance.lua" />
		<script name="EncumbranceOptions" file="scripts/encumbrance_options.lua" />
		<script name="SpellFailure" file="scripts/spell_failure.lua" />		
	</base>

</root>
