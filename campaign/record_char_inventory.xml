	<!--Armor-->
			<basicnumber name="armormaxstatbonus" source="encumbrance.armormaxstatbonus" insertbefore="encumbranceframe">
				<anchored to="armorpenaltyframe" position="insidetopleft" offset="85,24" width="35" height="20" />
				<hideonvalue>-1</hideonvalue>
				<min>-1</min>
			</basicnumber>
			<basicnumber name="armorcheckpenalty" source="encumbrance.armorcheckpenalty" insertbefore="encumbranceframe">
				<anchored to="armormaxstatbonus" position="right" offset="15,0" width="35" />
				<hideonvalue>0</hideonvalue>
				<max>0</max>
			</basicnumber>
			<buttonfield name="usearmormaxstatbonus" source="encumbrance.armormaxstatbonusactive" insertbefore="encumbranceframe" merge="replace">
				<anchored to="armorpenaltyframe" position="insidetopleft" offset="67,28" width="12" height="12" />
				<state icon="button_checkoff" tooltipres="char_tooltip_armormodoff" />
				<state icon="button_checkon" tooltipres="char_tooltip_armormodon" />
				<script>
					function onInit()
						RealEncumbrance.applyPenalties(window.getDatabaseNode())
						onValueChanged()
					end

					function onValueChanged()
						local nodeCheckPenalty = getDatabaseNode().getParent()
						local nCheckPenaltyFromEnc = DB.getValue(nodeCheckPenalty, 'checkpenaltyfromenc')
						local nCheckPenaltyFromArmor = DB.getValue(nodeCheckPenalty, 'checkpenaltyfromarmor')
						local nMaxStatFromEnc = DB.getValue(nodeCheckPenalty, 'maxstatbonusfromenc')
						local nMaxStatFromArmor = DB.getValue(nodeCheckPenalty, 'maxstatbonusfromarmor')
						local nPenaltiesActive = DB.getValue(nodeCheckPenalty, 'armormaxstatbonusactive')

						if nPenaltiesActive == 0 then
							window.armormaxstatbonus.setColor('7F000000')
						else
							if OptionsManager.isOption('ENCUMBRANCE_COLORS', 'on')
								and nMaxStatFromEnc ~= -1
								and (
									nMaxStatFromArmor &gt; nMaxStatFromEnc
									or nMaxStatFromArmor == -1
								)
								then
								window.armormaxstatbonus.setColor('FFB22929')
							else
								window.armormaxstatbonus.setColor('FF000000')
							end
						end
						if nPenaltiesActive == 0 then
							window.armorcheckpenalty.setColor('7F000000')
						else
							if OptionsManager.isOption('ENCUMBRANCE_COLORS', 'on')
								and nCheckPenaltyFromEnc ~= 0
								and (
									nCheckPenaltyFromArmor &gt; nCheckPenaltyFromEnc
									or nCheckPenaltyFromArmor == 0
								)
							then
								window.armorcheckpenalty.setColor('FFB22929')
							else
								window.armorcheckpenalty.setColor('FF000000')
							end
						end
					end
				</script>
			</buttonfield>
