				<tooltip textres="char_tooltip_noncarriedcoin" />
				<anchored to="coinamount3" position="right" offset="10,0" width="40" height="20" />
				<frame name="fielddark" offset="7,5,7,5" />
			</number_dropadd>

		<!--Label of Coin Type 3-->
			<stringu name="coinname3" source="coins.slot3.name">
