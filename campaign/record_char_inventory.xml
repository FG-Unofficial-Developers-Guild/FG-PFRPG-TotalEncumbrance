<root>
	<windowclass name="charsheet_inventory" merge="join">
		<sheetdata>

	<!--Armor-->
			<label insertbefore="encumbranceframe">
				<anchored to="armorpenaltyframe" position="insidetopleft" offset="15,24" />
				<static textres="char_label_invarmor" />
			</label>
			<basicnumber name="armormaxstatbonus" source="encumbrance.armormaxstatbonus" insertbefore="encumbranceframe">
				<anchored to="armorpenaltyframe" position="insidetopleft" offset="85,24" width="35" height="20" />
					<script>
						function onInit()
							onValueChanged()
						end

						function onValueChanged()
							local nodePC = getDatabaseNode().getParent()
							local maxstatbonusfromenc = DB.getValue(nodePC, 'maxstatbonusfromenc')
							local maxstattoset = getValue()
							local armormaxstatactive = DB.getValue(nodePC, 'armormaxstatbonusactive')

							if maxstatbonusfromenc ~= 0 and maxstattoset == maxstatbonusfromenc then
								window.armormaxstatbonus.setColor('FFb22929')
							elseif armormaxstatactive == 0 then
								window.armormaxstatbonus.setColor('7F000000')
							else
								window.armormaxstatbonus.setColor('FF000000')
							end
						end
					</script>
			</basicnumber>
			<basicnumber name="armorcheckpenalty" source="encumbrance.armorcheckpenalty" insertbefore="encumbranceframe">
				<anchored to="armormaxstatbonus" position="right" offset="15,0" width="35" />
					<script>
						function onInit()
							onValueChanged()
							Debug.chat('xml',getDatabaseNode().getParent())
						end

						function onValueChanged()
							local nodePC = getDatabaseNode().getParent()
							local checkpenaltyfromenc = DB.getValue(nodePC, 'checkpenaltyfromenc')
							local checkpenaltytoset = getValue()
							local armormaxstatbonusactive = DB.getValue(nodePC, 'armormaxstatbonusactive')

							if checkpenaltyfromenc ~= 0 and checkpenaltytoset == checkpenaltyfromenc then
								window.armorcheckpenalty.setColor('FFb22929')
							elseif armormaxstatbonusactive == 0 then
								window.armorcheckpenalty.setColor('7F000000')
							else
								window.armorcheckpenalty.setColor('FF000000')
							end
						end
					</script>
			</basicnumber>

	<!--Encumbrance Frame-->
			<frame_char name="encumbranceframe">
				<bounds>15,-147,240,142</bounds>
			</frame_char>
			<label name="encumbrance_label">
				<anchored to="encumbranceframe" position="insidetopleft" offset="15,10" />
				<static textres="char_label_totalweight" />
			</label>
			<simplenumber name="encumbrancelightload" source="encumbrance.lightload" insertbefore="coinframe">
				<anchored to="encumbranceframe" position="insidetopleft" offset="20,40" width="55" height="20" />
			</simplenumber>
			<simplenumber name="encumbrancemediumload" source="encumbrance.mediumload" insertbefore="coinframe">
				<anchored to="encumbrancelightload" position="right" offset="15,0" width="55" />
			</simplenumber>
			<simplenumber name="encumbranceheavyload" source="encumbrance.heavyload" insertbefore="coinframe">
				<anchored to="encumbrancemediumload" position="right" offset="15,0" width="55" />
			</simplenumber>
			<simplenumber name="encumbranceliftoverhead" source="encumbrance.liftoverhead" insertbefore="coinframe">
				<anchored to="encumbrancelightload" position="below" offset="0,15" height="20" />
				<frame name="fieldlight" offset="7,5,7,5" />
			</simplenumber>

		<!--Equipment Total Field-->
			<simplenumber name="encumbranceload" source="encumbrance.load">
				<anchored to="encumbranceframe" position="insidebottomright" offset="94,11" width="55" height="20" />
				<frame name="fieldlight" offset="7,5,7,5" />
				<readonly />
			</simplenumber>
			<label_fieldtop name="encumbranceload_label">
				<anchored to="encumbranceload" />
				<static textres="char_label_totalweight2" />
			</label_fieldtop>
			<simplenumber name="encumbranceload" source="encumbrance.load">
				<script>
					function onValueChanged()
						CoinsWeight.recomputeTotalWeight(window.getDatabaseNode())
					end
				</script>
			</simplenumber>

		<!--Coin Total Field-->
			<simplenumber name="treasureload" source="encumbrance.treasure">
				<anchored to="encumbranceliftoverhead" position="below" offset="0,15" width="55" height="20" />
				<bottom parent="encumbranceframe"  offset="-5"/>
				<frame name="fieldlight" offset="7,5,7,5" />
				<font>sheetlabel</font>
				<readonly />
				<script>
					function onValueChanged()
						CoinsWeight.recomputeTotalWeight(window.getDatabaseNode())
						RealEncumbrance.applyPenalties(window.getDatabaseNode())
					end
				</script>
			</simplenumber>
			<label_fieldtop name="treasureload_label">
			<anchored to="treasureload" />
				<static textres="char_label_treasureload" />
			</label_fieldtop>

		<!--Total Field-->
			<simplenumber name="totalload" source="encumbrance.total">
				<anchored to="encumbrancepushordrag" position="below" offset="0,14" width="55" height="20" />
				<bottom parent="encumbranceframe"  offset="-5"/>
				<frame name="fieldlight" offset="7,5,7,5" />
				<font>sheetlabel</font>
				<readonly />
			</simplenumber>
			<label_fieldtop name="totalload_label">
				<anchored to="totalload" />
				<static textres="char_label_totalload" />
			</label_fieldtop>

	<!--Coin Frame-->
			<frame_char name="coinframe">
				<bounds>255,-205,-29,200</bounds>
			</frame_char>

		<!--Carried Coin of Coin Type 1-->
			<number_dropadd name="coinamount1" >
				<tooltip textres="char_tooltip_carriedcoin" />
				<anchored to="coinframe" position="insidetopleft" offset="20,30" width="40" height="20" />
				<script>
					function onValueChanged()
						CoinsWeight.onCoinsValueChanged(window.getDatabaseNode())
					end
				</script>
				</number_dropadd>

		<!--Non Carried Coin of Coin Type 1-->
			<number_dropadd name="coinamount1a" source="coins.slot1.amountA">
				<tooltip textres="char_tooltip_noncarriedcoin" />
				<anchored to="coinamount1" position="righthigh" offset="10,0" width="40" height="20" />
				<frame name="fielddark" offset="7,5,7,5" />
			</number_dropadd>

		<!--Label of Coin Type 1-->
			<stringu name="coinname1" source="coins.slot1.name">
				<anchored to="coinamount1" position="righthigh" offset="60,0" width="20" />
