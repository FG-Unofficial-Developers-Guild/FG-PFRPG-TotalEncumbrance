		<!-- Wealth Total -->
			<stringu name="wealthtotal" source="coins.wealthtotal">
				<anchored to="coinframe" position="insidetopright" offset="15,10" />
				<readonly />
				<script>
					function onInit()
						local nNetWorth = LibTotalEncumbrance.round(window.inventorytotal.getValue() + window.coinstotal.getValue(), 2)
						local sNetWorth = LibTotalEncumbrance.formatCurrency(nNetWorth)
						setValue('Net Worth: ' .. sNetWorth .. ' gp')
						onValueChanged()
					end
					function onValueChanged()
						if getValue() == 'Net Worth: 0 gp' then setVisible(false)
						else setVisible(true)
						end
					end
				</script>
			</stringu>
			<basicnumber name="inventorytotal" source="coins.invtotalval">
				<anchored to="coinframe" position="insidetopright" offset="15,23" />
				<default>0</default>
				<readonly />
				<invisible />
				<script>
					function onValueChanged()
						window.wealthtotal.onInit()
					end
				</script>
			</basicnumber>
			<basicnumber name="coinstotal" source="coins.coinstotalval">
				<anchored to="coinframe" position="insidetopright" offset="15,23" />
				<default>0</default>
				<readonly />
				<invisible />
				<script>
					function onValueChanged()
						window.wealthtotal.onInit()
					end
				</script>
			</basicnumber>
		</sheetdata>
