<!-- this is here so that changing the base strength score recalculates armor penalties based on the new strength score -->
<root>
	<windowclass name="charsheet_main" merge="join">
		<sheetdata>
			<number_charabilityscore name="strength" source="abilities.strength.score">
				<script>
					function onValueChanged()
						RealEncumbrance.applyPenalties(window.getDatabaseNode())
					end
				</script>
			</number_charabilityscore>
		</sheetdata>
	</windowclass>	
</root>